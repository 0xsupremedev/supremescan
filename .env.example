# Database Configuration
SUPREMESCAN_DB_URL=postgresql://username:password@localhost:5432/supremescan

# Server Configuration
PORT=4000
NODE_ENV=development

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production
BCRYPT_ROUNDS=10

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GitHub OAuth Integration
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback
NEXT_PUBLIC_GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# GitHub API
GITHUB_ACCESS_TOKEN=optional_personal_access_token_for_higher_rate_limits

# Optional: Error Tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Email Service (for password reset, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
